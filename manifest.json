{
    "manifest_version": 3,
    "name": "Active Tab Split",
    "version": "1.0",
    "description": "Split your Chrome window to view multiple tabs side by side.",
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}